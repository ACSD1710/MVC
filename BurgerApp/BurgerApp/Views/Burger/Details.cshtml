@using BroSBurgersApp.Models.Model.ViewModel
@using BurgerApp.Models.Model.Domain
@model BurgerPostViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string helper = "";
}
<h2><b><u>Burgers Details</u></b></h2>
<h4>Burger Name</h4>
<p>@Model.Burger.Name</p>
<h4>Burger Price</h4>
<p>@Model.Burger.Price</p>
<h4>Fries</h4>
    <p>@{
        if(Model.Burger.HasFries is true){
            helper = "Yeah";
        }
        else{helper = "No";}
    }@(helper)</p>
<h4>Vegetarian</h4>
    <p>@{
        if(Model.Burger.IsVegetarian is true){
            helper = "Yeah";
        }
        else{helper = "No";}
    }   @(helper)</p>
<h4>Vegan</h4>
    <p>@{
        if(Model.Burger.IsVegan is true){
            helper = "Yeah";
        }
        else{helper = "No";}
    }   @(helper)</p>