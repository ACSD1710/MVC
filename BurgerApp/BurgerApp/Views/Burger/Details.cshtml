@using BurgerApp.Models.Model.Domain
@model Burger
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string helper = "";
}
<h2>Burgers Details</h2>
<h4>Burger Name</h4>
<p>@Model.Name</p>
<h4>Burger Price</h4>
<p>@Model.Price</p>
<h4>Fries</h4>
    <p>@{
        if(Model.HasFries is true){
            helper = "Yeah";
        }
        else{helper = "No";}
    }@(helper)</p>
<h4>Vegetarian</h4>
<p>@{
        if(Model.IsVegetarian is true){
            helper = "Yeah";
        }
        else{helper = "No";}
    }   @(helper)</p>
<h4>Vegan</h4>
<p>@{
        if(Model.IsVegan is true){
            helper = "Yeah";
        }
        else{helper = "No";}
    }   @(helper)</p>