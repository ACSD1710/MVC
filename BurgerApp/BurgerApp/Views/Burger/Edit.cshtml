@{
}
<form asp-controller="Burger" asp-action="Edit" asp-route-id = "@Model.Id" method="post" >
    <label asp-for="Name"> Burger Name
        <input asp-for="Name" />
    </label>
    <label asp-for="Price"> Burger Price
        <input asp-for="Price" />
    </label>
    <label asp-for="HasFries"> Has Fries
        <input asp-for="HasFries" type="checkbox" name="HasFries" value="true" />
    </label>
        
    <label asp-for="IsVegetarian">Is Vegetarian
         <input asp-for="IsVegetarian" type="checkbox" name="IsVegetarian" value="true" />
    </label>
       
    <label asp-for="IsVegan">Is Vegan
         <input asp-for="IsVegan" type="checkbox" name="IsVegan" value="true" />
    </label>
   <button>Save Burger Changes</button>

</form>