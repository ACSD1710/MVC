@using BroSBurgersApp.Models.Model.ViewModel
@model BurgerIndexViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    int enumarator = 0;
}
<a class="btn btn-success" asp-controller="Burger" asp-action="CreateBurger"> Create Burger</a>
<table class="table table-info">
    <thead>
        <tr>
            <td>#</td>
            <td>Burger's Name</td>
            <td>Burger's Price</td>
            <td>                 </td>
            
            
        </tr>
    </thead> 
    
    @foreach(var burger in @Model.Burgers)
    {
    <tbody>
        <tr>
           <td>@(++enumarator)</td> 
           <td><a asp-controller="Burger" asp-action="Details" asp-route-id="@burger.Id" >@burger.Name</a></td>
           <td>@burger.Price</td>  
           <td><a class="btn btn-warning" asp-controller="Burger" asp-action="Edit" asp-route-id="@burger.Id" >Edit</a>
           <a class="btn btn-danger" asp-controller="Burger" asp-action="Delete" asp-route-id="@burger.Id" >Delete</a>
           </td>
        </tr>


    </tbody>
    }
    
</table>